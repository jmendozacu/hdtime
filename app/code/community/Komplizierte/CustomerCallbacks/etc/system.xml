<?xml version="1.0"?>
<config>
    <tabs>
        <komplizierte translate="label">
            <label><![CDATA[Komplizierte Extentions]]></label>
            <sort_order>1000</sort_order>
        </komplizierte>
    </tabs>
    <sections>
        <komplizierte_customercallbacks translate="label" module="komplizierte_customercallbacks">
            <label>Customer Callbacks</label>
            <tab>komplizierte</tab>
            <frontend_type>text</frontend_type>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <jquery>
                    <label>JQuery Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <use_jquery translate="label">
                            <label>Use JQuery 10.2</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </use_jquery>
                    </fields>
                </jquery>
                <email>
                    <label>Email Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <email_to translate="label">
                            <label>Email Address</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </email_to>
                    </fields>
                </email>
            </groups>
        </komplizierte_customercallbacks>
    </sections>
</config>
