<?xml version="1.0"?>
<config>
    <modules>
        <ITDelight_Sales>
            <version>0.1.0</version>
        </ITDelight_Sales>
    </modules>
    <global>
        <models>
            <itdelight_sales>
                <class>ITDelight_Sales_Model</class>
                <resourceModel>itdelight_sales_resource</resourceModel>
            </itdelight_sales>
            <itdelight_sales_resource>
                <class>ITDelight_Sales_Model_Resource</class>
            </itdelight_sales_resource>
        </models>
        <helpers>
            <itdelight_sales>
                <class>ITDelight_Sales_Helper</class>
            </itdelight_sales>
        </helpers>
        <resources>
            <itdelight_sales_setup>
                <setup>
                    <module>ITDelight_Sales</module>
                    <class>Mage_Sales_Model_Mysql4_Setup</class>
                </setup>
            </itdelight_sales_setup>
        </resources>
        <fieldsets>
            <sales_convert_quote>
                <comment><to_order>*</to_order></comment>
            </sales_convert_quote>

            <sales_convert_order>
                <comment><to_quote>*</to_quote></comment>
            </sales_convert_order>
        </fieldsets>
        <template>
            <email>
                <sales_email_order_payment_privatbank_template module="sales">
                    <file>sales/order_new_privat.html</file>
                    <type>html</type>
                </sales_email_order_payment_privatbank_template>
            </email>
        </template>
    </global>
    <frontend>
        <events>
            <sales_order_save_after>
                <observers>
                    <add_comment_field_to_order>
                        <class>ITDelight_Sales_Model_Observer</class>
                        <method>addCommentFieldToOrder</method>
                    </add_comment_field_to_order>
                </observers>
            </sales_order_save_after>
            <checkout_type_onepage_save_order_after>
                <observers>
                    <register_customer>
                        <class>ITDelight_Sales_Model_Observer</class>
                        <method>registerCustomer</method>
                    </register_customer>
                </observers>
            </checkout_type_onepage_save_order_after>
        </events>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <itdelight_sales>
                    <file>itdelight_sales.xml</file>
                </itdelight_sales>
            </updates>
        </layout>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <order_comment_set_child_block>
                        <type>model</type>
                        <class>ITDelight_Sales_Model_Observer</class>
                        <method>orderCommentSetChildBlock</method>
                    </order_comment_set_child_block>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
    </adminhtml>
    <default>
        <sales_email>
            <order>
                <privatbank_template>sales_email_order_payment_privatbank_template</privatbank_template>
            </order>
        </sales_email>
    </default>
</config>