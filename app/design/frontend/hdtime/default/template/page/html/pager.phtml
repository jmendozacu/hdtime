/**
 * Pager template
 *
 * @see Mage_Page_Block_Html_Pager
 */
?>
<?php if($this->getCollection()->getSize()): ?>
    <?php if($this->getLastPageNum()>1): ?>
    <div class="row">
        <div class="col-sm-8">
            <div class="exp-filtr">
                <ul class="pagination">
                    <?php if (!$this->isFirstPage()): ?>
                        <li><a href="<?php echo $this->getPreviousPageUrl() ?>"><span class="ico-prev"></span></a></li>
                    <?php endif;?>
                    <?php if ($this->canShowPreviousJump()): ?>
                        <li><a class="previous_jump" title="" href="<?php echo $this->getPreviousJumpUrl() ?>">...</a></li>
                    <?php endif;?>
                    <?php foreach ($this->getFramePages() as $_page): ?>
                        <li class="<?php if ($this->isPageCurrent($_page)): ?>active<?php endif;?>"><a href="<?php echo $this->getPageUrl($_page) ?>"><?php echo $_page ?></a></li>
                    <?php endforeach;?>
                    <?php if ($this->canShowNextJump()): ?>
                        <li><a class="next_jump" title="" href="<?php echo $this->getNextJumpUrl() ?>">...</a></li>
                    <?php endif;?>
                    <?php if ($this->canShowLast()): ?>
                        <li><a class="last" href="<?php echo $this->getLastPageUrl() ?>"><?php echo $this->getLastPageNum() ?></a></li>
                    <?php endif;?>
                    <?php if (!$this->isLastPage()): ?>
                        <li><a href="<?php echo $this->getNextPageUrl() ?>"><span class="ico-next"></span></a></li>
                    <?php endif;?>
                </ul>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="exp-filtr text-right">
                <a href="<?php echo $this->getLimitUrl('all')?>">Показать всё</a>
            </div>
        </div>
    </div>
    <?php endif; ?>
<?php endif ?>
