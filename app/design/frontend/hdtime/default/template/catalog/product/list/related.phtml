<?php $relatedProductIds = $this->getProduct()->getRelatedProductIds(); ?>
<?php if(count($relatedProductIds) > 0): ?>
<div class="jcarousel-wrapper">
	<div id="carousel-new2" class="jcaro jcaro-slider">

		<ul class="list-unstyled list-inline">
		<?php foreach($relatedProductIds as $relatedProductId): ?>
			<?php $_item = Mage::getModel('catalog/product')->load($relatedProductId); ?>
			<li>
				<div class="prod-item">
					<div class="item-pict">
						<a href="<?php echo $_item->getProductUrl() ?>">
							<img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(195) ?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>">
						</a>
					</div>
					<div class="discr">
						<div class="cast">
							<?php echo $this->getPriceHtml($_item, true, '-related') ?>
						</div>
						<div class="title">
							<a href="<?php echo $_item->getProductUrl() ?>">
								<?php echo $this->escapeHtml($_item->getName()) ?>
							</a>
						</div>
						<?php if ($this->helper('wishlist')->isAllow()) : ?>
							<a style="display: none;" href="<?php echo $this->getAddToWishlistUrl($_item) ?>" class="link-wishlist"><?php echo $this->__('Add to Wishlist') ?></a>
						<?php endif; ?>
					</div>
				</div>
			</li>
		<?php endforeach ?>
		</ul>
	
	</div>
	<a href="#" class="jcarousel-control-prev2"></a>
	<a href="#" class="jcarousel-control-next2"><span class="grad"></span></a>
</div>
<?php endif ?>
